<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="CalculatorButton.Number">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#212121</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CalculatorButton.Operator">
        <item name="android:backgroundTint">#F49625</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalculatorButton.Function">
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalculatorButton.Equals">
        <item name="android:backgroundTint">#62D566</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>